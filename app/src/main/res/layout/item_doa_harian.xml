<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:elevation="14dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rljudulDoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivGambarDoa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doa_makan"
                    />
                <TextView
                    android:id="@+id/tvJudulDoa"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:text="Doa Bangun Tidur"
                    android:textColor="@color/dpurple"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
                <ImageButton
                    android:id="@+id/ibCollapseDoa"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:backgroundTint="@color/dpurple"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="40dp"
                    android:layout_toRightOf="@id/tvJudulDoa"

                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#C1C0C0"/>
            <RelativeLayout
                android:id="@+id/rlIsiDoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tvDoaArab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="اَلْحَمْدُ ِللهِ الَّذِىْ اَحْيَانَا بَعْدَمَآ اَمَاتَنَا وَاِلَيْهِ النُّشُوْرُ"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="10"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvDoaLatin"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Alhamdu lillahil ladzii ahyaanaa ba'da maa amaa tanaa wa ilahin nusyuuruُ"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_below="@+id/tvDoaArab"
                    android:maxLines="10"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>