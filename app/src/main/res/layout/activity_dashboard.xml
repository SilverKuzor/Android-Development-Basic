<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.DashboardActivity">

    <ImageButton
        android:id="@+id/ibMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_sort_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@drawable/latihan_rectangle"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/upin"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/tvSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Sale"
        android:layout_below="@id/ibMenu"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        />
    <TextView
        android:id="@+id/tvDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10%"
        android:layout_below="@id/tvSale"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-5dp"
        android:letterSpacing="0.1"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#D32F2F"
        />
    <TextView
        android:id="@+id/tvLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Limited Time"
        android:layout_below="@id/tvDisc"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="20dp"
        android:textSize="19dp"
        android:textColor="#818181"
        />
    <View
        android:id="@+id/garis"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C3C1C1"
        android:layout_below="@+id/tvLimit"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/tvPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular"
        android:layout_below="@id/garis"
        android:textColor="#D32F2F"
        android:textSize="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tvNewarival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="New Arival"
        android:textColor="#818181"
        android:textSize="23dp" />
    <TextView
        android:id="@+id/tvBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:text="Brand"
        android:textColor="#818181"
        android:textSize="23dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPopular"
        app:cardCornerRadius="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ahmad"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        app:cardCornerRadius="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ramy"
        android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/merk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ahmad tiyo"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:layout_below="@+id/tvPopular"
        />
    <TextView
        android:id="@+id/perusahan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesat"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:textColor="#777777"
        android:layout_below="@+id/merk1"
        />
    <TextView
        android:id="@+id/harga1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.40"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textColor="#D32F2F"
        android:layout_below="@+id/perusahan1"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/merk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramyio"
        android:layout_toRightOf="@+id/card2"
        android:layout_marginTop="35dp"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:layout_below="@+id/harga1"
        />
    <TextView
        android:id="@+id/perusahan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesat"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginStart="20dp"
        android:textSize="25dp"
        android:textColor="#777777"
        android:layout_below="@+id/merk2"
        />
    <TextView
        android:id="@+id/harga2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$19.49"
        android:layout_toRightOf="@+id/card1"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        android:textColor="#D32F2F"
        android:layout_below="@+id/perusahan2"
        android:textStyle="bold"
        />

</RelativeLayout>