<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.belajarandroidactivity.BelajarScrollView">
    <ImageView
        android:id="@+id/ivBackgrounds"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/untitled"
        android:scaleType="centerCrop"/>

    <RelativeLayout
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/ivBookPicture"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:src="@drawable/movie"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvBooktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:textSize="23sp"
        android:letterSpacing="0.05"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:text="Minion and The Yellow Lord"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/ivBookPicture"
        />
    <TextView
        android:id="@+id/tvBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Pierre Coffin"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/ivBookPicture"
        android:layout_below="@id/tvBooktitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/tvBookReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="132 Reviews"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/rating"
        android:layout_below="@id/tvBooktitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"

        />
    <LinearLayout
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvBookAuthor"
        android:layout_below="@id/tvBooktitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/baseline_star_rate_24"
            android:backgroundTint="#FFDD00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.7"
            android:layout_marginTop="1dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/genre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:background="#DAFFF6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textSize="16dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#1F84FF"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/genre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_toRightOf="@+id/genre1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:background="#DAFFF6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self-Improvement"
            android:textSize="16dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#1F84FF"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/genre3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner"
        android:layout_toRightOf="@+id/genre2"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"

        >
        <TextView
            android:background="#DAFFF6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sci-Fi"
            android:textSize="16dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="#1F84FF"
            />
    </androidx.cardview.widget.CardView>
<ScrollView
    android:id="@+id/scroll1"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_below="@+id/genre1"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synopsis"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textStyle="bold"

        />
    <TextView
        android:id="@+id/isiSynopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/synopsis"
        android:layout_below="@id/tvSynopsis"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:lineSpacingExtra="8dp"
        />

</RelativeLayout>
</ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/scroll1"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="20dp"
                android:textSize="18dp"
                android:textStyle="bold"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/ahmad1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReview"
                >
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReview"
                app:cardCornerRadius="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ahmad"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvReview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReview"
                android:layout_toRightOf="@id/card1"
                android:text="Kid_Lover_Gaming"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="80dp"
                android:textSize="18dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tvRevisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minions is a 2015 and Kyle Balda, Entertainment and distributed by Universal Pictures, it is the spin-off/prequel[a] to Despicable Me (2010)"
                android:layout_below="@id/tvReview1"
                android:layout_toRightOf="@+id/card1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="20dp"
                android:lineSpacingExtra="15dp"
                android:letterSpacing="0.01"
                />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ahmad2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ahmad1"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ahmad"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tvReview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/card1"
                    android:text="Kid_Lover_Gaming"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="80dp"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />
                <TextView
                    android:id="@+id/tvRevisi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minions is a 2015 and Kyle Balda, Entertainment and distributed by Universal Pictures, it is the spin-off/prequel[a] to Despicable Me (2010)"
                    android:layout_below="@id/tvReview2"
                    android:layout_toRightOf="@+id/card2"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="20dp"
                    android:lineSpacingExtra="15dp"
                    android:letterSpacing="0.01"
                    />
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Reading"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>