<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.belajarandroidactivity.TravelActivity">
 <ImageView
     android:layout_width="match_parent"
     android:layout_height="300dp"
     android:scaleType="centerCrop"
     android:src="@drawable/turki"
     />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
  android:orientation="horizontal"
     >
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginTop="15dp"
     android:layout_marginStart="20dp">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Balloons"
      android:textSize="25dp"
      android:textStyle="bold"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cappadocia, Turkye"
      android:textSize="17dp"
      android:textColor="#54000000"
      android:textStyle="bold"
      />


 </LinearLayout>
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_marginTop="20dp"
     android:layout_marginStart="150dp">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/baseline_star_rate_24"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="56"
      android:textSize="17dp"
      android:textStyle="bold" />
 </LinearLayout>

 </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:gravity="center"
     android:layout_marginTop="25dp">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
   android:orientation="vertical"
      android:layout_marginEnd="60dp">
  <ImageButton
      android:id="@+id/call"
      android:layout_width="40dp"
      android:layout_height="40dp"
   android:background="@drawable/baseline_local_phone_24"


      />
   <TextView
       android:layout_marginStart="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
     android:text="CALL"
       android:textSize="17dp"
       android:textColor="#2072B6"
       />

  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp">
   <ImageButton
       android:id="@+id/nav"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:background="@drawable/baseline_navigation_24"
       android:layout_marginStart="12dp"

       />
   <TextView
       android:layout_marginStart="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="ROUTE"
       android:textSize="17dp"
       android:textColor="#2072B6"
       />

  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginStart="60dp">
   <ImageButton
       android:id="@+id/share"
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:background="@drawable/baseline_share_24"
 android:layout_marginStart="10dp"
       />
   <TextView
       android:layout_marginStart="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="SHARE"
       android:textSize="17dp"
       android:textColor="#2072B6"
       />

  </LinearLayout>
 </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="25dp"
      android:text="synopsis"
      android:layout_marginEnd="35dp"
      android:layout_marginStart="35dp"
      tools:ignore="HardcodedText" />


</LinearLayout>